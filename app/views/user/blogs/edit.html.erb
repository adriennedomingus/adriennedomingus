<div class="jumbotron blog-image">
  <p class="page-title">Edit a blog...</p>
</div>
<div class="container">
  <%= form_for @blog, url: user_blog_path(@blog) do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
    <%= f.label :date %>
    <%= f.text_field :date, class: "form-control" %>
    <%= f.label :content %>
    <%= f.text_area :content, class: "form-control" %>
    <%= f.label :project %>
    <%= select("blog", :project_id, Project.all.collect { |p| [p.name, p.id]}, {prompt: "None"}, class: 'form-control' )%>
    <br>
    <%= f.submit "Update Blog", class: "btn btn-default" %>
  <% end %>
</div>
