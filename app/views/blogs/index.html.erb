<div class="jumbotron blog-image">
  <h1 class="page-title">Blogs</h1>
</div>
<div class="container page">
  <% @blogs.each do |blog| %>
    <p class="post-title"><%= blog.title %></p>
    <p class="post-date"><%= blog.post_date %></p>
    <p class="post-contents"><%= truncate(blog.content, :length => 500, :separator => ' ') %></p>
  <% end %>
</div>
